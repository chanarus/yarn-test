{
	"parser": "babel-eslint",
	"extends": "airbnb",
	"env": {
		"browser": true,
		"node": true
	},
	"rules": {
		"indent": [2],
		"import/no-absolute-path": 1,
		"react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
	},
	"settings": {
		"import/resolver": {
			"alias": {
				"map": [
					["shared", "./shared"],
					["static", "./static"]
				],
				"extensions": [".js", ".jsx", ".json"]
			}
		}
	}
}
